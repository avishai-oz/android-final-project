    </LinearLayout>

    <ImageView
        android:id="@+id/work_out"
        android:layout_width="192dp"
        android:layout_height="201dp"
        android:translationX="1450px"
        android:translationY="200px"
        app:srcCompat="@drawable/workout" />


</LinearLayout>